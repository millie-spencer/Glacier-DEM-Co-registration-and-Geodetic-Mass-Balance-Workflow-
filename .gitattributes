srtm_data/* filter=lfs diff=lfs merge=lfs -text
example_data_Nevados/* filter=lfs diff=lfs merge=lfs -text
aligned_dems/* filter=lfs diff=lfs merge=lfs -text
*.hgt filter=lfs diff=lfs merge=lfs -text
